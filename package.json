{
	"name": "node-template",
	"description": "An ESM node package template with ESLint, Prettier & TypeScript built in. Powered by esbuild.",
	"version": "1.0.5",
	"types": "./dist/index.d.ts",
	"type": "module",
	"exports": {
		"import": "./dist/index.js",
		"require": "./dist/index.cjs"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/alii/node-template.git"
	},
	"author": "Alistair Smith <alistairsmith01@gmail.com> (https://alistair.sh)",
	"license": "MIT",
	"funding": {
		"type": "github",
		"url": "https://github.com/sponsors/alii"
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^5.1.0",
		"@typescript-eslint/parser": "^5.1.0",
		"eslint": "^8.1.0",
		"eslint-config-xo": "^0.39.0",
		"eslint-config-xo-typescript": "^0.45.2",
		"prettier": "^2.4.1",
		"tsup": "^5.5.0",
		"typescript": "^4.4.4"
	},
	"scripts": {
		"build": "tsup src/index.ts --dts --format esm,cjs",
		"lint": "eslint ./src/**/*.ts",
		"fix": "eslint ./src/**/*.ts --fix"
	},
	"bugs": {
		"url": "https://github.com/alii/nextkit/issues"
	},
	"homepage": "https://github.com/alii/nextkit#readme",
	"files": [
		"dist",
		"package.json"
	],
	"keywords": [
		"node",
		"template"
	],
	"packageManager": "yarn@3.1.0"
}
